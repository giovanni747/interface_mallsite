<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mall Services</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: system-ui, -apple-system, sans-serif;
        }

        #content {
            min-height: 100vh;
            background: linear-gradient(135deg, rgba(244, 63, 94, 0.1), rgba(159, 18, 57, 0.1));
            padding: 2rem;
        }

        .hero-section {
            height: 300px;
            position: relative;
            margin-bottom: 2rem;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0, 0, 0, 0.4);
        }

        .hero-content {
            text-align: center;
            color: white;
        }

        .services-content {
            display: flex;
            justify-content: space-between;
            margin-top: 50px;
            height: 90vh;
            width: 100%;
            gap: 2rem;
        }

        .services-content-left {
            flex-basis: 60%;
        }

        .services-content-right {
            flex-basis: 40%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .services-image {
            width: 100%;
            height: 400px;
            border-radius: 15px;
            overflow: hidden;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
        }

        .services-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .services-table {
            opacity: 0;
            transform: scale(0.5);
            transition: opacity 0.5s ease, transform 0.5s ease;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
            overflow: hidden;
        }

        .services-table.visible {
            opacity: 1;
            transform: scale(1);
            animation: appear 0.5s linear;
        }

        .services-table table {
            width: 100%;
            border-collapse: collapse;
        }

        .services-table th {
            background: #020617;
            color: white;
            padding: 1rem 1.5rem;
            font-weight: 500;
            text-align: left;
        }

        .services-table td {
            padding: 1rem 1.5rem;
        }

        .services-table tr:hover {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);
        }

        .weekday {
            color: #16a34a;
            font-weight: 500;
        }

        .weekend {
            color: #f97316;
            font-weight: 500;
        }

        @keyframes appear {
            from {
                opacity: 0;
                transform: scale(0.5);
            }
            to {    
                opacity: 1;
                transform: scale(1);
            }
        }
    </style>
</head>
<body>
    <section id="content">
        <div class="hero-section">
            <div class="hero-content">
                <h1>Mall Hours</h1>
                <p>Plan your visit to JSM Mall</p>
            </div>
        </div>

        <div class="services-content">
            <div class="services-content-left">
                <div class="services-table">
                    <table class="w-full">
                        <thead>
                            <tr>
                                <th class="py-4 px-6 bg-[#020617] text-white font-medium">Day</th>
                                <th class="py-4 px-6 bg-[#020617] text-white font-medium">Hours</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="py-4 px-6 text-green-600 font-medium">Monday</td>
                                <td class="py-4 px-6">8:00 AM - 8:00 PM</td>
                            </tr>
                            <tr>
                                <td class="py-4 px-6 text-green-600 font-medium">Tuesday</td>
                                <td class="py-4 px-6">8:00 AM - 8:00 PM</td>
                            </tr>
                            <tr>
                                <td class="py-4 px-6 text-green-600 font-medium">Wednesday</td>
                                <td class="py-4 px-6">8:00 AM - 8:00 PM</td>
                            </tr>
                            <tr>
                                <td class="py-4 px-6 text-green-600 font-medium">Thursday</td>
                                <td class="py-4 px-6">8:00 AM - 8:00 PM</td>
                            </tr>
                            <tr>
                                <td class="py-4 px-6 text-green-600 font-medium">Friday</td>
                                <td class="py-4 px-6">8:00 AM - 8:00 PM</td>
                            </tr>
                            <tr>
                                <td class="py-4 px-6 text-orange-500 font-medium">Saturday</td>
                                <td class="py-4 px-6">8:00 AM - 6:00 PM</td>
                            </tr>
                            <tr>
                                <td class="py-4 px-6 text-orange-500 font-medium">Sunday</td>
                                <td class="py-4 px-6">8:00 AM - 6:00 PM</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="services-content-right">
                <div class="services-image">
                    <img src="/images/mall2.jpg" alt="Mall Interior">
                </div>
            </div>
        </div>
    </section>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const table = document.querySelector('.services-table');
            if (table) {
                setTimeout(() => {
                    table.classList.add('visible');
                }, 100);
            }
        });
    </script>
</body>
</html>

